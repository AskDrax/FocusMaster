<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FocusMaster.Resources">

    <Color x:Key="LightestGrey">#FFDDDDDD</Color>
    <Color x:Key="LighterGrey">#FFA7A7A7</Color>

    <Color x:Key="LightGrey">#FF686868</Color>
    <Color x:Key="MediumGrey">#FF383838</Color>

    <Color x:Key="VeryDarkGrey">#FF2B2B2B</Color>
    <Color x:Key="DarkestDarkGrey">#FF252525</Color>
    <Color x:Key="DarkestGrey">#FF1E1E1E</Color>
    <Color x:Key="AlmostBlack">#FF151515</Color>

    <Color x:Key="HighlightGreen">#FFAEFFAE</Color>
    <Color x:Key="HighlightBlue">#FF1C97EA</Color>
    <Color x:Key="BrightBlue">#FF007ACC</Color>
    <Color x:Key="LightBrightYellow">#FFF8FFB0</Color>

    <Color x:Key="CloseRed">#FFBF2828</Color>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource DarkestGrey}"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource AlmostBlack}"/>
    <SolidColorBrush x:Key="WindowCaptionBackgroundBrush" Color="{StaticResource MediumGrey}"/>

    <SolidColorBrush x:Key="TitleButtonBackgroundBrush" Color="{StaticResource LighterGrey}"/>

</ResourceDictionary>